{
  "name": "luna",
  "version": "0.1.2",
  "main": "index.js",
  "repository": "git@github.com:dominicwhittle/luna.git",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc -w & yarn demo-scroll & yarn demo-index & yarn demo-scroll-stagger & yarn demo-draggable & yarn demo-component & yarn demo-transition",
    "demo-scroll": "esbuild demo/scroll.ts --bundle --watch --outfile=demo/scroll.js",
    "demo-index": "esbuild demo/index.ts --bundle --watch --outfile=demo/index.js",
    "demo-draggable": "esbuild demo/draggable.ts --bundle --watch --outfile=demo/draggable.js",
    "demo-scroll-stagger": "esbuild demo/scroll-stagger.ts --bundle --watch --outfile=demo/scroll-stagger.js",
    "demo-component": "esbuild demo/component.ts --bundle --watch --outfile=demo/component.js",
    "demo-transition": "esbuild demo/transition.ts --bundle --watch --outfile=demo/transition.js",
    "serve-demos": "http-server ./demo --port 8080"
  },
  "dependencies": {
    "esbuild": "^0.11.11",
    "http-server": "^0.12.3",
    "typescript": "^4.2.2"
  }
}
